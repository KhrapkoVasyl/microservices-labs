{
  "name": "lab2",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run build:provider && npm run build:consumer",
    "build:provider": "cd provider-service && npm run build",
    "build:consumer": "cd consumer-service && npm run build",
    "start:provider": "cd provider-service && npm run start:dev",
    "start:consumer": "cd consumer-service && npm run start:dev",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "docker:scale:example": "docker-compose up -d --scale provider-service=",
    "test": "cd tests && ./test.sh",
    "benchmark": "npx tsx tests/benchmark.ts"
  },
  "devDependencies": {
    "tsx": "^4.7.0"
  }
}
